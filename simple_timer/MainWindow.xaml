<Window x:Class="simple_timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simple_timer"
        mc:Ignorable="d"
        Title="Simple Timer" Height="350" Width="525" Background="Gray">
    <Grid Background="White">
        <Button x:Name="timer_start_1" Content="(Re)Start" HorizontalAlignment="Left" Margin="55,79,0,0" VerticalAlignment="Top" Width="75" Click="timer_start_1_Click"/>
        <Button x:Name="timer_pause_1" Content="Stop" HorizontalAlignment="Left" Margin="55,112,0,0" VerticalAlignment="Top" Width="75" Click="timer_pause_1_Click" Loaded="timer_pause_1_Loaded"/>
        <Button x:Name="timer_reset_1" Content="Reset" HorizontalAlignment="Left" Margin="347,50,0,0" VerticalAlignment="Top" Width="75" Click="timer_reset_1_Click"/>
        <Label x:Name="timer_label_h"  HorizontalAlignment="Left" Margin="167,94,0,0" VerticalAlignment="Top" Height="38" Width="35" Content="0"/>
        <Label x:Name="timer_label_m"  HorizontalAlignment="Left" Margin="220,94,0,0" VerticalAlignment="Top" Height="38" Width="35" Content="0"/>
        <Label x:Name="timer_label_s"  HorizontalAlignment="Left" Margin="273,94,0,0" VerticalAlignment="Top" Height="38" Width="35" Content="0"/>
        <ComboBox x:Name="comboBox_h" HorizontalAlignment="Left" Margin="154,50,0,0" VerticalAlignment="Top" Width="48" SelectedIndex="0" MaxDropDownHeight="200" Loaded="comboBox_h_Loaded" />
        <ComboBox x:Name="comboBox_m" HorizontalAlignment="Left" Margin="207,50,0,0" VerticalAlignment="Top" Width="48" SelectedIndex="0" MaxDropDownHeight="200" Loaded="comboBox_m_Loaded" />
        <ComboBox x:Name="comboBox_s" HorizontalAlignment="Left" Margin="260,50,0,0" VerticalAlignment="Top" Width="48" SelectedIndex="0" MaxDropDownHeight="200" Loaded="comboBox_s_Loaded" />
    </Grid>
</Window>
