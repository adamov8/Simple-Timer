<Window x:Class="simple_timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simple_timer"
        mc:Ignorable="d"
        Title="Simple Timer" Height="350" Width="525" Background="Gray">
    <Grid Background="White">
        <Button x:Name="timer_start_1" Content="Start" HorizontalAlignment="Left" Margin="55,92,0,0" VerticalAlignment="Top" Width="75" Click="timer_start_1_Click"/>
        <Button x:Name="timer_reset_1" Content="Reset" HorizontalAlignment="Left" Margin="55,117,0,0" VerticalAlignment="Top" Width="75" Click="timer_reset_1_Click"/>
        <Label x:Name="timer_label_1"  HorizontalAlignment="Left" Margin="171,74,0,0" VerticalAlignment="Top" Height="63" Width="149"/>
        <TextBox x:Name="tb1_h" HorizontalAlignment="Left" Height="23" Margin="39,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="34" LostFocus="tb1_LostFocus"/>
        <TextBox x:Name="tb1_m" HorizontalAlignment="Left" Height="23" Margin="78,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="34" LostFocus="tb1_LostFocus"/>
        <TextBox x:Name="tb1_s" HorizontalAlignment="Left" Height="23" Margin="117,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="34" LostFocus="tb1_LostFocus"/>

    </Grid>
</Window>
